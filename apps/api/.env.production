# Production Environment Variables for Render
NODE_ENV=production
PORT=3001

# MongoDB Atlas connection string (to be added in Render dashboard)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/shopmart?retryWrites=true&w=majority

# CORS configuration (to be added in Render dashboard)
# CORS_ORIGINS=https://your-frontend-url.vercel.app,https://your-frontend-url.onrender.com

# MongoDB Options
MONGODB_DB_NAME=shopmart
MONGODB_POOL_SIZE=10
MONGODB_TIMEOUT=10000

# Assistant Configuration
ASSISTANT_NAME=ShopMart Assistant
ASSISTANT_RESPONSE_TIME=50
ASSISTANT_MAX_TOKENS=500

# Performance Settings
MAX_PAYLOAD_SIZE=5mb
REQUEST_TIMEOUT=30000
