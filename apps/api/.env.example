# =====================================================
# REQUIRED: MongoDB Configuration
# =====================================================
# For local development: mongodb://localhost:27017/shopmart
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/shopmart?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017/shopmart

# Database name (default: shopmart)
MONGODB_DB_NAME=shopmart

# =====================================================
# REQUIRED: Server Configuration
# =====================================================
# Port for the API server
PORT=3001

# Node environment (development, production, test)
NODE_ENV=development

# =====================================================
# REQUIRED: CORS Configuration
# =====================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# =====================================================
# OPTIONAL: Auto-Seeding
# =====================================================
# Set to 'true' to automatically seed database on first run
AUTO_SEED=true

# =====================================================
# OPTIONAL: Database Performance
# =====================================================
MONGODB_POOL_SIZE=10
MONGODB_TIMEOUT=10000

# =====================================================
# OPTIONAL: Assistant Configuration
# =====================================================
ASSISTANT_NAME=ShopMart Assistant
ASSISTANT_RESPONSE_TIME=50
ASSISTANT_MAX_TOKENS=500

# =====================================================
# OPTIONAL: Performance Settings
# =====================================================
MAX_PAYLOAD_SIZE=5mb
REQUEST_TIMEOUT=30000

# =====================================================
# OPTIONAL: LLM Configuration (Week 5)
# =====================================================
# LLM_API_URL=https://your-ngrok-url.ngrok.io
# LLM_TIMEOUT=30000
